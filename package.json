{
  "name": "@termpura/core",
  "version": "0.0.1-beta.1",
  "description": "Create delicious Terminal UIs without the culinary classes.",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
		"README.md",
		"LICENSE"
  ],
  "scripts": {
    "test": "cd tests && node index.js",
    "lint": "eslint src --config ./eslint.config.json --ext .js",
    "lint:fix": "eslint src --config ./eslint.config.json --ext .js --fix",
    "format": "prettier --check . --config ./prettier.config.json",
    "format:fix": "prettier --write . --config ./prettier.config.json",
    "build": "rimraf ./dist/** && rollup --config",
    "build:cjs": "rimraf ./dist/index.cjs && rollup src/index.js --file dist/index.cjs --format cjs",
    "build:mjs": "rimraf ./dist/index.mjs && rollup src/index.js --file dist/index.mjs --format esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rayhanadev/termpura-core.git"
  },
  "keywords": [
    "fetch",
    "https",
    "async",
    "request"
  ],
  "author": "Ray Arayilakath <rayhanadev@protonmail.com> (https://furret.codes)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rayhanadev/termpura-core/issues"
  },
  "homepage": "https://github.com/rayhanadev/termpura-core",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "eslint": "^7.28.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.51.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "inquirer": "^8.1.5"
  },
  "directories": {
    "test": "tests"
  }
}
